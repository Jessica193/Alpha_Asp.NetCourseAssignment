@using WebbApp.ViewModels
@model SignUpViewModel
@{
	Layout = "_CleanLayout";
	ViewData["Title"] = "Create Account";
}


<section id="createAccount">
	<h1 class="form-headline">Create Account</h1>

	<a class="btn btn-grey btn-google" href="#">
		<img src="~/Images/google-icon.svg" alt="google icon">
		<p>Login with Google</p>
	</a>

	<div class="divider">
		<span>OR</span>
	</div>

	<form novalidate method="post" asp-action="SignUp" asp-controller="Auth">

		<div class="form-group">
			<label asp-for="FirstName"></label>
			<div class="field-group">
				<input asp-for="FirstName" />
				<span asp-validation-for="FirstName"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="LastName"></label>
			<div class="field-group">
				<input asp-for="LastName" />
				<span asp-validation-for="LastName"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="Email"></label>
			<div class="field-group">
				<input asp-for="Email" />
				<span asp-validation-for="Email"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="Password"></label>
			<div class="field-group">
				<input asp-for="Password" />
				<span asp-validation-for="Password"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="ConfirmPassword"></label>
			<div class="field-group">
				<input asp-for="ConfirmPassword" />
				<span asp-validation-for="ConfirmPassword"></span>
			</div>
		</div>

		<div class="form-group terms-checkbox-group ">
			<label class="terms-label">
				<input asp-for="TermsAccepted" type="checkbox" class="terms-checkbox field-group" />
				<span>I accept <a href="#" class="terms-link">Terms and Conditions</a></span>
			</label>
			<span asp-validation-for="TermsAccepted"></span>
		</div>

		<button class="btn btn-blue btn-submit" type="submit">Create account</button>
	</form>


	<div class="alternative-text">
		<span>Already have an account?</span>
		<a href="@Url.Action("SignIn", "Auth")">Login</a>
	</div>
	
</section>

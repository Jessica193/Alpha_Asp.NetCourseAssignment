@model EditMemberForm

<div id="editMemberModal" class="modal">
	<div class="modal-content">

		<div class="modal-header">
			<h3>Edit Member</h3>
			<button type="button" class="btn-close" data-close="true"><i class="fa-solid fa-xmark"></i></button>
		</div>

		<form novalidate method="post" asp-action="Edit" asp-controller="Members">

			<input asp-for="Id" readonly type="hidden" />

			<div class="image-previewer circle ">
				<img src="" class="image-preview" />
				<input asp-for="MemberImage" class="d-none" accept="image/*" />
			</div>

			<div class="form-group">
				<label asp-for="FirstName"></label>
				<div class="field-group">
					<input asp-for="FirstName" />
					<span asp-validation-for="FirstName"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="LastName"></label>
				<div class="field-group">
					<input asp-for="LastName" />
					<span asp-validation-for="LastName"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="Email"></label>
				<div class="field-group">
					<input asp-for="Email" />
					<span asp-validation-for="Email"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="Location"></label>
				<div class="field-group">
					<input asp-for="Location" />
					<span asp-validation-for="Location"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="Phone"></label>
				<div class="field-group">
					<input asp-for="Phone" />
					<span asp-validation-for="Phone"></span>
				</div>
			</div>


			<button class="btn btn-blue btn-submit" type="submit">Create</button>
		</form>

	</div>
</div>

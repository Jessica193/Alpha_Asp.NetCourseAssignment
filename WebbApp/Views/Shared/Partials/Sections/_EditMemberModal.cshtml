@using WebbApp.ViewModels
@model MembersViewModel

<div id="editMemberModal" class="modal">
	<div class="modal-content">

		<div class="modal-header">
			<h3>Edit Member</h3>
			<button type="button" class="btn-close" data-close="true"><i class="fa-solid fa-xmark"></i></button>
		</div>

		<form novalidate method="post" asp-action="Edit" asp-controller="Members" enctype="multipart/form-data" data-modal-form="true">

			<input asp-for="EditMemberForm.Id" readonly type="hidden" />

			<div class="image-previewer circle ">
				<img src="" class="image-preview" />
				<input asp-for="EditMemberForm.MemberImage" class="d-none" accept="image/*" />
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.FirstName"></label>
				<div class="field-group">
					<input asp-for="EditMemberForm.FirstName" />
					<span asp-validation-for="EditMemberForm.FirstName"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.LastName"></label>
				<div class="field-group">
					<input asp-for="EditMemberForm.LastName" />
					<span asp-validation-for="EditMemberForm.LastName"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.Email"></label>
				<div class="field-group">
					<input asp-for="EditMemberForm.Email" />
					<span asp-validation-for="EditMemberForm.Email"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.Phone"></label>
				<div class="field-group">
					<input asp-for="EditMemberForm.Phone" />
					<span asp-validation-for="EditMemberForm.Phone"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.JobTitle"></label>
				<div class="field-group">
					<input asp-for="EditMemberForm.JobTitle" />
					<span asp-validation-for="EditMemberForm.JobTitle"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.StreetName"></label>
				<div class="field-group">
					<input asp-for="EditMemberForm.StreetName" />
					<span asp-validation-for="EditMemberForm.StreetName"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.PostalCode"></label>
				<div class="field-group">
					<input asp-for="EditMemberForm.PostalCode" />
					<span asp-validation-for="EditMemberForm.PostalCode"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.City"></label>
				<div class="field-group">
					<input asp-for="EditMemberForm.City" />
					<span asp-validation-for="EditMemberForm.City"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.DateOfBirth"></label>
				<div class="field-group">
					<input asp-for="EditMemberForm.DateOfBirth" placeholder="Enter date of birth" />
					<span asp-validation-for="EditMemberForm.DateOfBirth"></span>
				</div>
			</div>

			<div class="form-group">
				<label asp-for="EditMemberForm.SelectedRole"></label>
				<select asp-for="EditMemberForm.SelectedRole" asp-items="Model.AvailableRoles">
					<option disabled selected value="">-- Select role --</option>
				</select>
				<span asp-validation-for="EditMemberForm.SelectedRole"></span>
			</div>


			<button class="btn btn-blue btn-submit" type="submit">Edit</button>
		</form>

	</div>
</div>
